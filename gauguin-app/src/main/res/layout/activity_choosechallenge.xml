<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.challenge.ChooseChallengeActivity"
    tools:ignore="MissingDefaultResource"
    >

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="vertical"/>

    <View
        android:id="@+id/divider"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/md_theme_light_onBackground"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:strokeWidth="0dp"
        android:theme="@style/AppThemeDay"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.None"
        />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:strokeWidth="0dp"
        android:theme="@style/AppThemeNight"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.None"
        />

    <ImageView
        android:id="@+id/iconZen"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/meditation"
        app:tint="@color/md_theme_light_primary"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/size_chip_group"
        app:layout_constraintEnd_toStartOf="@id/divider"
        android:theme="@style/AppThemeDay"
        />

    <ImageView
        android:id="@+id/iconChruncher"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/head_alert"
        app:tint="@color/md_theme_dark_primary"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toBottomOf="@id/size_chip_group"
        app:layout_constraintStart_toEndOf="@id/divider"
        android:theme="@style/AppThemeNight"
        />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/size_chip_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/divider"
        app:layout_constraintEnd_toEndOf="@id/divider"
        app:singleSelection="true"
        app:selectionRequired="true"
        >

        <com.google.android.material.chip.Chip
            android:id="@+id/size_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.Chip.Filter"
            android:text="4x4"
            tools:ignore="HardcodedText"
            />

        <com.google.android.material.chip.Chip
            android:id="@+id/size_five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.Chip.Filter"
            android:text="5x5"
            tools:ignore="HardcodedText"
            />

        <com.google.android.material.chip.Chip
            android:id="@+id/size_six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.Chip.Filter"
            android:theme="@style/AppThemeNight"
            android:text="6x6"
            tools:ignore="HardcodedText"
            />

    </com.google.android.material.chip.ChipGroup>

    <org.piepmeyer.gauguin.ui.grid.GridUI
        android:id="@+id/challengeZen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/iconZen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        android:theme="@style/AppThemeDay"
        />

    <org.piepmeyer.gauguin.ui.grid.GridUI
        android:id="@+id/challengeChruncher"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:transitionName="grid"
        app:layout_constraintTop_toBottomOf="@id/iconChruncher"
        app:layout_constraintStart_toEndOf="@id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        android:theme="@style/AppThemeNight"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/startZen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Start"
        style="@style/Widget.Material3.Button.OutlinedButton"
        app:layout_constraintStart_toStartOf="@id/challengeZen"
        app:layout_constraintEnd_toEndOf="@id/challengeZen"
        app:layout_constraintTop_toBottomOf="@id/challengeZen"
        android:theme="@style/AppThemeDay"
        tools:ignore="HardcodedText"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/startChruncher"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Start"
        style="@style/Widget.Material3.Button.OutlinedButton"
        app:layout_constraintStart_toStartOf="@id/challengeChruncher"
        app:layout_constraintEnd_toEndOf="@id/challengeChruncher"
        app:layout_constraintTop_toBottomOf="@id/challengeChruncher"
        android:theme="@style/AppThemeNight"
        tools:ignore="HardcodedText"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/classicalRatingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:padding="8dp"
        android:text="Classical rating"
        android:textColor="@color/md_theme_dark_onSecondaryFixed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/potentialSolutionCountLabel"
        android:theme="@style/AppThemeNight"
        tools:ignore="HardcodedText"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/classicalRatingZen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/md_theme_light_onSecondaryFixedVariant"
        android:padding="8dp"
        app:layout_constraintEnd_toStartOf="@id/classicalRatingLabel"
        app:layout_constraintTop_toTopOf="@id/classicalRatingLabel"
        app:layout_constraintBottom_toBottomOf="@id/classicalRatingLabel"
        android:theme="@style/AppThemeDay"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/classicalRatingChruncher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/md_theme_dark_secondary"
        android:padding="8dp"
        app:layout_constraintStart_toEndOf="@id/classicalRatingLabel"
        app:layout_constraintTop_toTopOf="@id/classicalRatingLabel"
        app:layout_constraintBottom_toBottomOf="@id/classicalRatingLabel"
        android:theme="@style/AppThemeNight"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/potentialSolutionCountLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:padding="8dp"
        android:text="Potential Solution Count"
        android:textColor="@color/md_theme_dark_onSecondaryFixed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/challengeChruncher"
        android:theme="@style/AppThemeNight"
        tools:ignore="HardcodedText"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/potentialSolutionCountZen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/md_theme_light_onSecondaryFixedVariant"
        android:padding="8dp"
        app:layout_constraintEnd_toStartOf="@id/potentialSolutionCountLabel"
        app:layout_constraintTop_toTopOf="@id/potentialSolutionCountLabel"
        app:layout_constraintBottom_toBottomOf="@id/potentialSolutionCountLabel"
        android:maxLines="2"
        android:textAlignment="viewEnd"
        android:theme="@style/AppThemeDay"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/potentialSolutionCountChruncher"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/md_theme_dark_secondary"
        android:padding="8dp"
        app:layout_constraintStart_toEndOf="@id/potentialSolutionCountLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/potentialSolutionCountLabel"
        app:layout_constraintBottom_toBottomOf="@id/potentialSolutionCountLabel"
        android:maxLines="2"
        android:theme="@style/AppThemeNight"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
